<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.angithadas.stylessample.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:gravity="center"
        android:typeface="sans"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"/>
    <EditText
        android:id="@+id/edit2"
        android:text="Style World!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/EdittextStyle"
        android:textSelectHandleLeft="@drawable/ic_opacity_black_18dp"
        android:textSelectHandleRight="@drawable/ic_opacity_black_18dp"
        android:textSelectHandle="@drawable/ic_opacity_blacky_18dp"
        android:theme="@style/EditTextColorCustom"
        android:textCursorDrawable="@drawable/cursor_custom"/>

   </LinearLayout>
